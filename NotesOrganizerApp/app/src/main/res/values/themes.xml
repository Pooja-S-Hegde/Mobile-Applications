<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SmartNotes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryVariant">@color/light_primary_dark</item>
        <item name="colorOnPrimary">@color/light_text_primary</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_accent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/light_text_primary</item>
        
        <!-- Status bar and Navigation bar -->
        <item name="android:statusBarColor">@color/light_primary_dark</item>
        <item name="android:navigationBarColor">@color/light_surface</item>
        
        <!-- Background and surface colors -->
        <item name="android:windowBackground">@color/light_background</item>
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorOnSurface">@color/light_text_primary</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/light_text_primary</item>
        <item name="android:textColorSecondary">@color/light_text_secondary</item>
        <item name="android:textColorHint">@color/light_text_hint</item>
        
        <!-- Card and container styles -->
        <item name="cardBackgroundColor">@color/light_card_background</item>
        <item name="colorError">@color/light_error</item>
    </style>

    <style name="Theme.SmartNotes" parent="Base.Theme.SmartNotes" />

    <!-- Text Appearance Styles -->
    <style name="TextAppearance.SmartNotes.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.SmartNotes.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.SmartNotes.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <!-- Custom Input Styles -->
    <style name="Widget.SmartNotes.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/light_surface</item>
        <item name="boxStrokeColor">@color/light_primary</item>
        <item name="hintTextColor">@color/light_primary</item>
        <item name="android:textColorHint">@color/light_text_hint</item>
        <item name="endIconTint">@color/light_primary</item>
        <item name="startIconTint">@color/light_primary</item>
    </style>

    <style name="Widget.SmartNotes.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/light_text_primary</item>
        <item name="android:textColorHint">@color/light_text_hint</item>
    </style>
</resources>