<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SmartNotes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/dark_primary_dark</item>
        <item name="colorOnPrimary">@color/dark_text_primary</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_accent</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/dark_text_primary</item>
        
        <!-- Status bar and Navigation bar -->
        <item name="android:statusBarColor">@color/dark_primary_dark</item>
        <item name="android:navigationBarColor">@color/dark_surface</item>
        
        <!-- Background and surface colors -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_text_primary</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>
        <item name="android:textColorHint">@color/dark_text_hint</item>
        
        <!-- Card and container styles -->
        <item name="cardBackgroundColor">@color/dark_card_background</item>
        <item name="colorError">@color/dark_error</item>
    </style>

    <!-- Custom Input Styles -->
    <style name="Widget.SmartNotes.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/dark_surface</item>
        <item name="boxStrokeColor">@color/dark_primary</item>
        <item name="hintTextColor">@color/dark_primary</item>
        <item name="android:textColorHint">@color/dark_text_hint</item>
        <item name="endIconTint">@color/dark_primary</item>
        <item name="startIconTint">@color/dark_primary</item>
    </style>

    <style name="Widget.SmartNotes.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="android:textColorHint">@color/dark_text_hint</item>
    </style>
</resources>